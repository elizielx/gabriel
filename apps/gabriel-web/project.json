{
    "name": "gabriel-web",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/gabriel-web/src",
    "targets": {
        "build": {
            "executor": "qwik-nx:build",
            "options": {
                "runSequence": ["gabriel-web:build.client", "gabriel-web:build.ssr"],
                "outputPath": "dist/apps/gabriel-web"
            },
            "configurations": {
                "preview": {}
            }
        },
        "build.client": {
            "executor": "@nx/vite:build",
            "options": {
                "outputPath": "dist/apps/gabriel-web",
                "configFile": "apps/gabriel-web/vite.config.ts"
            }
        },
        "build.ssr": {
            "executor": "@nx/vite:build",
            "defaultConfiguration": "preview",
            "options": {
                "outputPath": "dist/apps/gabriel-web"
            },
            "configurations": {
                "preview": {
                    "ssr": "src/entry.preview.tsx",
                    "mode": "production"
                }
            }
        },
        "preview": {
            "executor": "@nx/vite:preview-server",
            "options": {
                "buildTarget": "gabriel-web:build",
                "port": 4173
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "options": {
                "passWithNoTests": true,
                "reportsDirectory": "../../coverage/apps/gabriel-web"
            }
        },
        "serve": {
            "executor": "@nx/vite:dev-server",
            "options": {
                "buildTarget": "gabriel-web:build.client",
                "mode": "ssr",
                "port": 5173
            }
        },
        "serve.debug": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node --inspect-brk ../../node_modules/vite/bin/vite.js --mode ssr --force",
                "cwd": "apps/gabriel-web"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/gabriel-web/**/*.{ts,tsx,js,jsx}"]
            }
        }
    },
    "tags": []
}
